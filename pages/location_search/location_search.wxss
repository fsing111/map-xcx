/* pages/location_search/location_search.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search-header {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.search-keyword {
  font-size: 28rpx;
  color: #333;
}

.search-results {
  padding: 0 20rpx;
}

.result-item {
  background-color: #fff;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.location-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.location-address {
  font-size: 24rpx;
  color: #666;
}

.no-results {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}