/* pages/map/map.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.container {
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.search-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.suggestions-list {
  position: fixed;
  top: 92rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-top: 10rpx;
  max-height: 600rpx;
  overflow-y: auto;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 101;
}

.suggestion-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.suggestion-address {
  font-size: 24rpx;
  color: #999;
}

.search-bar {
  display: flex;
  align-items: center;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-bar input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
}

.search-button {
  margin-left: 16rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #007AFF;
  border-radius: 8rpx;
  border: none;
  min-width: 10rpx;
}

.map-container {
  flex: 1;
  width: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.map-image {
  max-width: 100%;
  max-height: 100%;
  width: 100%;
  height: 100%;
  object-fit: contain;
  transform-origin: center;
  transition: transform 0.1s ease-out;
  z-index: 1;
  touch-action: none;
}

.circle-button {
  position: absolute;
  left: 50%;
  bottom: 30rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
  transform: translateX(-50%);
  z-index: 100;
}

.button-icon {
  width: 40rpx;
  height: 40rpx;
}

.nan-lu-shaojiu-museum-button {
  position: absolute;
  left: 30%;
  top: 40%;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx 30rpx 30rpx 0;
  background-color: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  transition: transform 0.2s ease;
  transform: rotate(0deg);
}

.nan-lu-shaojiu-museum-button:active {
  transform: scale(0.95);
}

.nan-lu-shaojiu-museum-icon {
  width: 48rpx;
  height: 48rpx;
  transform: rotate(0deg);
}