<!--pages/profile/profile.wxml-->
<view class="container">
  <view class="user-info-section">
    <view class="user-info-content">
      <view class="avatar-container">
        <image class="avatar" src="{{hasUserInfo ? userInfo.avatarUrl : '/images/default-avatar.png'}}" mode="aspectFill"></image>
      </view>
      <view class="user-details">
        <block wx:if="{{!hasUserInfo}}">
          <text class="nickname">未登录</text>
          <button class="login-btn" bindtap="getUserProfile" wx:if="{{canIUseGetUserProfile}}">点击登录</button>
        </block>
        <block wx:else>
          <text class="nickname">{{userInfo.nickName}}</text>
        </block>
      </view>
    </view>
  </view>

  <view class="function-list">
    <view class="function-item" wx:for="{{functionList}}" wx:key="id" bindtap="navigateToFunction" data-id="{{item.id}}">
      <view class="function-icon">{{item.icon === 'star' ? '⭐' : item.icon === 'time' ? '⏱️' : item.icon === 'comment' ? '💬' : '📋'}}</view>
      <text class="function-name">{{item.name}}</text>
      <view class="function-arrow">></view>
    </view>
  </view>

  <view class="version-info">
    <text>版本 1.0.0</text>
  </view>
</view>